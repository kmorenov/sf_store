{% extends 'base.html.twig' %}

{% block title %}Online Store {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/bootstrap4/bootstrap.min.css') }}">
    <link href="{{ asset('plugins/fontawesome-free-5.0.1/css/fontawesome-all.css') }}" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/OwlCarousel2-2.2.1/owl.carousel.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/OwlCarousel2-2.2.1/owl.theme.default.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/OwlCarousel2-2.2.1/animate.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/jquery-ui-1.12.1.custom/jquery-ui.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/shop_styles.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/shop_responsive.css') }}">
{% endblock %}

{% block body %}
    <div>
        <span><b>sf - Online Store</b></span><span><a href="{{ path('cart') }}">My Cart</a></span>
    </div>
    <ul class="cat_menu">
    {% for category in categories %}
        {% if not category.parent %}
            <li class="hassubs">{{ category }}</li>

            {% set id = category.id %}
            <ul>
                {% for category in categories %}
                    {% if category.parent and not category.parent.parent and category.parent.id == id %}
                        <li>{{ category }}</li>

                    {% set ppid = category.id %}
                    <ol>
                    {% for category in categories %}
                        {% if category.parent and category.parent.parent and category.parent.id == ppid and category.parent.parent.id == id %}
                            <li><a href="{{ path('product', {'productid' : category.id}) }}">{{ category}}</a></li>
                        {% endif %}
                    {% endfor %}
                    </ol>
                {% endif %}
            {% endfor %}
            </ul>
        {% endif %}
    {% endfor %}
    </ul>
    <!-- Header -->
    {% block header %}
    {% endblock %}

{% endblock %}