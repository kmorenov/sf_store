{{ dump(app.session) }}
<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Images -->
            <div class="col-lg-2 order-lg-1 order-2">
                <ul class="image_list">
                    <li data-image="images/single_4.jpg"><img src="{{ asset('images/single_4.jpg') }}" alt=""></li>
                    <li data-image="images/single_2.jpg"><img src="{{ asset('images/single_2.jpg') }}" alt=""></li>
                    <li data-image="images/single_3.jpg"><img src="{{ asset('images/single_3.jpg') }}" alt=""></li>
                </ul>
            </div>
            {{ dump(product) }}
            <!-- Selected Image -->
            <div class="col-lg-5 order-lg-2 order-1">
                <div class="image_selected">
                    {#{% set image =  %}#}

                    <img src="{{ asset('public/images') }}" alt="">
                </div>
            </div>
    
            <!-- Description -->
            <div class="col-lg-5 order-3">
                <div class="product_description">
                    <div class="product_category">{{ product.category.name|title }}</div>
                    <div class="product_name">{{ product.manufacturer|capitalize }} {{ product.model|capitalize }}</div>
                    <div class="rating_r rating_r_4 product_rating"><i></i><i></i><i></i><i></i><i></i></div>
                    <div class="product_text"><p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas fermentum. laoreet turpis, nec sollicitudin dolor cursus at. Maecenas aliquet, dolor a faucibus efficitur, nisi tellus cursus urna, eget dictum lacus turpis.</p></div>
                    <div class="order_info d-flex flex-row">
                        
                        {% include 'product/partial/cart_form.html.twig' %}

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
