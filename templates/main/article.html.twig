{% extends 'base.html.twig' %}

{% block body %}
        <style>
            .example-wrapper {
                margin: 1em auto;
                max-width: 800px;
                width: 95%;
                font: 18px/1.5 sans-serif;
            }

            .example-wrapper code {
                background: #F5F5F5;
                padding: 2px 6px;
            }
        </style>
        {% block back %}
            {{ parent() }}
        {% endblock %}

    {% block characteristics %}
        {{ parent() }}
    {% endblock %}


    <div class="example-wrapper">
        <h1> {{ 'Category/Manufacturer: ' ~ product.category }}âœ…</h1>
        {% for img in  product.productImages %}
            <img src= {{ '/images/products/' ~ img.filepath }}>
        {% endfor %}
        <form action="{{ path('add_to_cart',{'product': product.id}) }}">
            <b>Model: </b><input type="text" name="model" value="{{ product.model }}" disabled="disabled">
            <b>Price: </b><input type="number" name="price" value="{{ product.price }}" disabled="true">
            <b>Quantity: </b><input type="number" name="quantity" value="1" min="1" max="5">
            <button type="submit">Add</button>
        </form>
    </div>

    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}